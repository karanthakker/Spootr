<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedede"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/twitterimage"
        android:layout_width="120dp"
        android:layout_height="118dp"
        android:layout_alignRight="@+id/whvstext"
        android:layout_alignTop="@+id/facebookimage"
        android:scaleType="fitXY"
        android:src="@drawable/twitter_button" />

    <TextView
        android:id="@+id/Ortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/twitterimage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:text="or"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#2e2e2e"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/whvstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SpootrLogoIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Share it, Anonymously!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#2e2e2e"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twitterimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="No worries, we won't post anything automatically."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#2e2e2e"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/twitterimage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Login with"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#2e2e2e"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/facebookimage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_toLeftOf="@+id/Ortext"
        android:scaleType="fitXY"
        android:src="@drawable/facebook_button" />

    <ImageView
        android:id="@+id/SpootrLogoIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/spootrword"
        android:gravity="center"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>
