<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/Member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UniversityName"
        android:layout_below="@+id/Membercount"
        android:gravity="center"
        android:text="@string/Member"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#848484"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/universityView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/abc_ab_solid_dark_holo" />

    <ToggleButton
        android:id="@+id/Join"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/Membercount"
        android:layout_alignBottom="@+id/Membercount"
        android:layout_alignParentRight="true"
         android:layout_marginRight="12dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/togglebutton"
        android:textOn=""
        android:textOff=""
        android:scaleType="fitXY"
        android:src="@drawable/join_button" />

    <TextView
        android:id="@+id/UniversityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/universityView"
        android:layout_toRightOf="@+id/universityView"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:text="@string/universityName"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/Membercount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/UniversityName"
        android:layout_below="@+id/UniversityName"
        android:layout_marginLeft="19dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    

</RelativeLayout>
